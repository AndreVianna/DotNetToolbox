@page "/Settings/World"
@implements IAsyncDisposable
@rendermode InteractiveWebAssembly

<h3>World Settings</h3>

<EditForm Model="@_world" OnValidSubmit="SaveWorld">
    @if (_isReadOnly)
    {
      <button type="button" class="btn btn-primary" @onclick="EnableEdit">Edit</button>
    }
    else
    {
      <button type="submit" class="btn btn-primary">Save</button>
      <button type="button" class="btn btn-secondary" @onclick="CancelEdit">Cancel</button>
    }

    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="dateTime" class="form-label">Current Date & Time</label>
        <InputText id="dateTime" class="form-control" @bind-Value="_dateTime" readonly />
    </div>
    <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <InputText id="location" class="form-control" @bind-Value="_world.Location" disabled="@_isReadOnly" />
    </div>
    <div class="mb-3">
        <label for="userProfile" class="form-label">User</label>
        <InputText id="userProfile" class="form-control" @bind-Value="_world.UserProfile" disabled="@_isReadOnly" />
    </div>

    <div class="mb-3">
      <label class="form-label">Additional Information</label>
      <table class="table">
        <thead>
        <tr>
          <th>Value</th>
          <th>Value Template</th>
          <th>Default Text</th>
          <th>
          @if (!_isReadOnly)
          {
            <button class="btn btn-primary" @onclick="AddInfo">Add Info</button>
          }
          </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var info in _world.AdditionalInformation)
        {
          <tr>
            <td>
              <InputText @bind-Value="info.Value" disabled="@_isReadOnly" />
            </td>
            <td>
              <InputText @bind-Value="info.ValueTemplate" disabled="@_isReadOnly" />
            </td>
            <td>
              <InputText @bind-Value="info.DefaultText" disabled="@_isReadOnly" />
            </td>
            <td>
              @if (!_isReadOnly)
              {
                <button class="btn btn-danger" @onclick="() => DeleteInfo(info)">Delete</button>
              }
            </td>
          </tr>
        }
        </tbody>
      </table>

    <div class="mb-3">
      <label class="form-label">Skills</label>
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          @foreach (var skill in _world.Skills)
          {
            <tr>
              <td>@skill.Name</td>
              <td>@skill.Description</td>
              <td>
                @if (!_isReadOnly)
                {
                  <button class="btn btn-primary" @onclick="() => OpenSkillModal(skill)">Edit</button>
                  <button class="btn btn-danger" @onclick="() => DeleteSkill(skill)">Delete</button>
                }
              </td>
            </tr>
          }
        </tbody>
      </table>
      @if (!_isReadOnly)
      {
        <button class="btn btn-primary" @onclick="() => OpenSkillModal(null)">Add Skill</button>
      }
    </div>
  </div>

</EditForm>

@if (_showSkillModal)
{
  <div class="modal fade show" tabindex="-1" role="dialog" style="display: block;">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">@(_selectedSkill == null ? "Add Skill" : "Edit Skill")</h5>
          <button type="button" class="close" @onclick="CloseSkillModal">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <!-- Skill form fields -->
          <div class="mb-3">
            <label for="skillName" class="form-label">Name</label>
            <InputText id="skillName" class="form-control" @bind-Value="_selectedSkill!.Name" />
          </div>
          <div class="mb-3">
            <label for="skillDescription" class="form-label">Description</label>
            <InputTextArea id="skillDescription" class="form-control" @bind-Value="_selectedSkill.Description" />
          </div>
          <!-- Add more fields for skill properties -->
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" @onclick="CloseSkillModal">Cancel</button>
          <button type="button" class="btn btn-primary" @onclick="SaveSkill">Save</button>
        </div>
      </div>
    </div>
  </div>
}

@if (_showDeleteConfirmation)
{
  <div class="modal fade show" tabindex="-1" role="dialog" style="display: block;">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Confirm Delete</h5>
          <button type="button" class="close" @onclick="CancelDelete">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to delete this skill?</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" @onclick="CancelDelete">Cancel</button>
          <button type="button" class="btn btn-danger" @onclick="ConfirmDelete">Delete</button>
        </div>
      </div>
    </div>
  </div>
}
