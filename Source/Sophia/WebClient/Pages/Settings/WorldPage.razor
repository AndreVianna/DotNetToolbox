@page "/Settings/World"
@implements IDisposable
@rendermode InteractiveWebAssembly

<div class="world-container">
  <div class="row mb-3">
    <div class="col-md-6">
      <h3>World Settings</h3>
    </div>
    <div class="col-md-6 text-md-end">
      @if (_isReadOnly) {
        <button type="button" class="btn btn-primary" @onclick="EnableEdit">
          <i class="bi bi-pencil-square me-2"></i>Edit
        </button>
      }
      else {
        <button type="submit" class="btn btn-success me-2" form="world-form">
          <i class="bi bi-save me-2"></i>Save
        </button>
        <button type="button" class="btn btn-secondary" @onclick="CancelEdit">
          <i class="bi bi-x-circle me-2"></i>Cancel
        </button>
      }
    </div>
  </div>

  <div class="world-form-container">
    <EditForm Model="@_world" OnValidSubmit="SaveWorld">
      <DataAnnotationsValidator />
      <ValidationSummary />

      <div class="row mb-3">
        <div class="col-md-6">
          <label for="dateTime" class="form-label">Current Date & Time</label>
          <InputText id="dateTime" class="form-control" @bind-Value="_dateTime" readonly />
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-md-6">
          <label for="location" class="form-label">Location</label>
          <InputText id="location" class="form-control" @bind-Value="_world.Location" disabled="@_isReadOnly" />
        </div>
        <div class="col-md-6">
          <label for="userProfile" class="form-label">User</label>
          <InputText id="userProfile" class="form-control" @bind-Value="_world.UserProfile" disabled="@_isReadOnly" />
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-12">
          <label class="form-label">Additional Information</label>
        </div>
        <div class="col-12">
          <div class="row">
            <div class="col-md-1">
              @if (!_isReadOnly) {
                <button class="btn btn-sm btn-primary" @onclick="AddInfo" @onclick:preventDefault>
                  <i class="bi bi-plus-circle"></i>
                </button>
              }
              else {
                <button class="btn btn-sm btn-secondary" @onclick:preventDefault disabled>
                  <i class="bi bi-plus-circle"></i>
                </button>
              }
            </div>
            <div class="col-md-4">
              <label class="form-label">Default Text</label>
            </div>
            <div class="col-md-3">
              <label class="form-label">Value</label>
            </div>
            <div class="col-md-4">
              <label class="form-label">Value Template</label>
            </div>
          </div>
          @foreach (var info in _world.AdditionalInformation) {
            <div class="row mb-2">
              <div class="col-md-1">
                @if (!_isReadOnly) {
                  <button class="btn btn-sm btn-danger" @onclick="() => DeleteInfo(info)" @onclick:preventDefault>
                    <i class="bi bi-trash"></i>
                  </button>
                }
              </div>
              <div class="col-md-4">
                <InputText class="form-control" @bind-Value="info.DefaultText" disabled="@_isReadOnly" />
              </div>
              <div class="col-md-3">
                <InputText class="form-control" @bind-Value="info.Value" disabled="@_isReadOnly" />
              </div>
              <div class="col-md-4">
                <InputText class="form-control" @bind-Value="info.ValueTemplate" disabled="@_isReadOnly" />
              </div>
            </div>
          }
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-12">
          <label class="form-label">Skills</label>
        </div>
        <div class="col-12">
          <div class="row">
            <div class="col-md-1">
              @if (!_isReadOnly) {
                <button class="btn btn-sm btn-primary" @onclick="OpenSkillSelectionDialog">
                  <i class="bi bi-plus-circle"></i>
                </button>
              }
              else {
                <button class="btn btn-sm btn-secondary" @onclick:preventDefault disabled>
                  <i class="bi bi-plus-circle"></i>
                </button>
              }
            </div>
            <div class="col-md-4">
              <label class="form-label">Name</label>
            </div>
            <div class="col-md-7">
              <label class="form-label">Description</label>
            </div>
          </div>
          @foreach (var skill in _world.Skills) {
            <div class="row mb-2">
              <div class="col-md-1">
                @if (!_isReadOnly) {
                  <button class="btn btn-sm btn-danger" @onclick="() => RemoveSkill(skill)" @onclick:preventDefault>
                    <i class="bi bi-trash"></i>
                  </button>
                }
              </div>
              <div class="col-md-4">
                <InputText class="form-control" @bind-Value="skill.Name" disabled="@_isReadOnly" />
              </div>
              <div class="col-md-7">
                <InputText class="form-control" @bind-Value="skill.Description" disabled="@_isReadOnly" />
              </div>
            </div>
          }
        </div>
      </div>
    </EditForm>
  </div>
</div>

@if (_showSkillSelectionDialog) {
  <SkillSelectionDialog AvailableSkills="_availableSkills"
                        SelectedSkills="_skillSelectionBuffer"
                        OnSkillsSelected="FinishSkillSelection"
                        OnCancel="CloseSkillSelectionDialog" />
}
