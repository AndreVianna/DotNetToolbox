@page "/Settings/Skills"
@rendermode InteractiveServer

<div class="container">
  <div class="container-header row mb-3">
    <div class="col-md-6">
      <h3>Skills Management</h3>
    </div>
  </div>

  <div class="container-body">
    @if (_skills.Count == 0) {
      <p>No skills found.</p>
    }
    else {
      <table class="table">
        <thead>
          <tr>
            <th>
              <button class="btn btn-primary btn-sm" @onclick="Add">
                <i class="bi bi-plus-circle"></i>
              </button>
            </th>
            <th>Name</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var skill in _skills) {
            <tr>
              <td>
                <button class="btn btn-primary btn-sm" @onclick="() => Edit(skill)">
                  <i class="bi bi-pencil"></i>
                </button>
                <button class="btn btn-danger btn-sm" @onclick="() => Delete(skill)">
                  <i class="bi bi-trash"></i>
                </button>
              </td>
              <td>
                <button class="btn btn-link" @onclick="() => View(skill)">
                  @skill.Name
                </button>
              </td>
              <td>@skill.Description</td>
            </tr>
          }
        </tbody>
      </table>
    }
  </div>
</div>

@if (_showDeleteConfirmation)
{
  <ConfirmationDialog Message="Are you sure you want to delete this skill?"
                      OnConfirm="ExecuteDelete"
                      OnCancel="CancelDelete" />
}
