<div class="modal modal-lg fade show" tabindex="-1" role="dialog" style="display: block;">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Chat Setup</h5>
        <button type="button" class="btn-close" @onclick="Cancel"></button>
      </div>
      <div class="modal-body">

        <EditForm Model="@Chat" id="chat-form" OnValidSubmit="Save">
          <DataAnnotationsValidator />
          <div class="row mb-3">
            <div class="col-8">
              <label for="model" class="form-label me-2">AI Model</label>
              <InputSelect id="model" class="form-control me-2" @bind-Value="Chat.Model">
                @foreach (var model in _models) {
                  <option value="@model">@model</option>
                }
              </InputSelect>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-8">
              <label for="persona" class="form-label me-2">Agent Persona</label>
              <InputSelect id="persona" class="form-control me-2" @bind-Value="Chat.Persona">
                @foreach (var persona in _personas) {
                  <option value="@persona">@persona</option>
                }
              </InputSelect>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-8">
              <label>Temperature:</label>
              <input type="number" class="form-control" @bind="Chat.Temperature" min="0" max="1" step="0.05" />
            </div>
          </div>
        </EditForm>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
        <button type="submit" class="btn btn-primary" form="chat-form">Start</button>
      </div>
    </div>
  </div>
</div>
