<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>DotNetToolbox.Linq</RootNamespace>
    <PackageId>DotNetToolbox.Linq</PackageId>
    <Title>DotNetToolbox Asynchronous Linq Library</Title>
    <Version>8.1.0-rc1</Version>
    <Authors>Andre Vianna</Authors>
    <Company>D0tN3tC0d3r5</Company>
    <PackageTags>DotNet;Toolbox;Core;Async;Linq</PackageTags>
    <PackageProjectUrl>https://github.com/D0tN3tC0d3r5/DotNetToolbox</PackageProjectUrl>
    <Description>A versatile C# library for .NET 8, designed to enhance development by providing a asynchronous methods to standard IQueriable.</Description>
    <Copyright>© Andre Vianna 2023</Copyright>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>icon.png</PackageIcon>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageReleaseNotes>
      DotNetToolbox.Linq Version 8.1.0-rc1

      Stable release of the DotNetToolbox.Linq library.
    </PackageReleaseNotes>
    <Product>DotNetToolbox.Linq</Product>
    <PackageOutputPath>pkgs\$(Configuration)</PackageOutputPath>
    <ApplicationIcon>icon.ico</ApplicationIcon>
    <AssemblyName>DotNetToolbox.Linq</AssemblyName>
    <Deterministic>false</Deterministic>
    <AssemblyVersion>8.1.0.*</AssemblyVersion>
    <FileVersion>8.1.0</FileVersion>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>DotNetToolbox.snk</AssemblyOriginatorKeyFile>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Options\**" />
    <Compile Remove="pkgs\**" />
    <EmbeddedResource Remove="Options\**" />
    <EmbeddedResource Remove="pkgs\**" />
    <None Remove="Options\**" />
    <None Remove="pkgs\**" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="icon.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\..\icon.png">
      <Pack>true</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="README.md">
      <Pack>true</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\..\LICENSE">
      <Pack>true</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Core\DotNetToolbox.Core.csproj" />
  </ItemGroup>

</Project>
