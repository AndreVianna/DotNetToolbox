<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>SampleCLI</RootNamespace>
    <AssemblyName>SampleCLI</AssemblyName>
    <Description>This a sample CLI (Command-Line Interface) application.</Description>
    <Version>1.0.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <AdditionalFiles Include="..\..\..\Dependencies\DotNetToolbox.layerdiagram" Link="DotNetToolbox.layerdiagram">
      <Visible>False</Visible>
    </AdditionalFiles>
    <None Include="..\..\..\Dependencies\DotNetToolbox.layerdiagram.layout" Link="DotNetToolbox.layerdiagram.layout" />
    <None Include="..\..\..\Dependencies\DotNetToolbox.layerdiagram.suppressions" Link="DotNetToolbox.layerdiagram.suppressions" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DotNetToolbox.Console" Version="8.1.1-rc1" />
    <PackageReference Include="Microsoft.DependencyValidation.Analyzers" Version="0.11.0" />
  </ItemGroup>

</Project>
